{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx",
    "*.d.ts",
    "telegram-types.ts"
  ],
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx"
  }
}